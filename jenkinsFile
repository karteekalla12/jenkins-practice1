pipeline {
    agent any

    stages {

        stage('Set Up Python Virtual Environment') {
            steps {
                echo "ğŸ Creating virtual environment..."
                sh 'sudo apt install python3.12'
            }
        }

        stage('Build') {
            steps {
                echo "ğŸš€ Running your Python script..."
                sh '${PYTHON} practice.py'
            }
        }

        stage('Test') {
            steps {
                echo "ğŸ§ª Running tests with pytest..."
                sh '${PIP} install pytest pytest-html'
                sh '${PYTHON} -m pytest tests/ --html=report.html || true'
            }
        }
    }
}    